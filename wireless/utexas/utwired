# $Header: $

BASE_ETH0_IP="${BASE}."
ROBOT_ID="${ID}"

depend() {
  need dbus
}

start() {
  ifconfig eth0 "${BASE_ETH0_IP}${ROBOT_ID}" netmask 255.255.255.0
  route add -net default gw "${BASE_ETH0_IP}1"
  ifconfig eth0 up
}

stop() {
  ifconfig eth0 down
}

restart() {
  stop
  sleep 2
  start
}
