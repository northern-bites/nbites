#!/bin/bash

if [[ $NBITES_DIR == "" ]]
    then
        echo "cannot use nbtool scripts without NBITES_DIR variable.";
        exit 1
fi

echo "using NBITES_DIR=" $NBITES_DIR

cd $NBITES_DIR/src/nbtool

set -e
ant

echo
echo ">>>>>>>>>>>>>>>>>>>>>>>>>>>>>> build complete <<<<<<<<<<<<<<<<<<<<<<<<<<<<<<"
echo

java -ea -Xms256m -Xmx256m -cp .:jars/:../../build/nbtool nbtool.term.NBTool_v8 "$@"
