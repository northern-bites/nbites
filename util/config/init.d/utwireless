# $Header: $

depend() {
  need dbus
}

start() {
  ifconfig wlan0 up
  wpa_supplicant -iwlan0 -Dwext -c/etc/wpa_supplicant/wpa_supplicant.conf -B
  sleep 1
  dhclient wlan0
}

stop() {
  killall wpa_supplicant
  ifconfig wlan0 down
}

restart() {
  stop
  sleep 2
  start
}
